{
  "type": "module",
  "name": "@brmorillo/utils",
  "version": "7.1.0",
  "description": "Public utility library",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "private": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "validate": "npm run lint && npm run format",
    "fix": "npm run lint:fix && npm run format:fix",
    "pub": "npm run fix && npm run build && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brmorillo/util.git"
  },
  "keywords": [
    "utility",
    "collection",
    "function",
    "math",
    "object",
    "string",
    "util",
    "utils",
    "typescript",
    "library",
    "uuid",
    "validation",
    "array"
  ],
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@paralleldrive/cuid2": "^2.2.2",
    "@sapphire/snowflake": "^3.5.5",
    "bcryptjs": "^2.4.3",
    "ua-parser-js": "^2.0.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "luxon": "^3.5.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
